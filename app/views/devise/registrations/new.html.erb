<div class="container">
	<div class="signin_container">

		<h2 class="signup_background textshadow">Sign up</h2>
			<div class="form_container">
				<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				  <%= f.error_notification %>
				  <%- resource_class.omniauth_providers.each do |provider| %>
				  	<%= link_to "facebook", omniauth_authorize_path(resource_name, provider), :class => "signup_facebook" %>
				  <% end -%>		
					<div class="or_image">Or image</div>
				 
					 <%= f.input :name, :required => true, :autofocus => true, label: false, placeholder: 'Name', input_html: { class: 'name' } %>
					 
				    <%= f.input :email, :required => true, :autofocus => true, label: false, input_html: { class: 'email' }, placeholder: 'Email' %>

				    <%= f.input :password, :required => true, label: false, input_html: { class: 'password' }, placeholder: 'Password' %>
				    

				    <%= f.button :submit, "Sign up", :class => "login_btn sign_inbtn" %>
				 			<span class="dont_have">Have an account ?</span>
				 			<%= link_to "Login", new_session_path(resource_name), :class => "signup_link ease"  %>
				<% end %>

				<%#= render "devise/shared/links" %>
			</div><!-- form_container -->
	</div><!-- signin_container -->
</div><!-- container -->