<div class="container">
	<div class="signin_container">

		<h2 class="forgot_pswrd textshadow">Forgot Password?</h2>
		<div class="form_container">
			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			  <%= f.error_notification %>

			    <%= f.input :email, :required => true, label: false, placeholder: 'Email',input_html: { class: 'email' } %>
			    <%= f.button :submit, "Send me", :class => "login_btn sign_inbtn"  %>

			<% end %>

			<%#= render "devise/shared/links" %>

		</div><!-- form_container -->
	</div><!-- signin_container -->
</div><!-- container -->