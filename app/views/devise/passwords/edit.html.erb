<div class="container">
  <div class="signin_container">
    <h2 class="forgot_pswrd textshadow">New Password?</h2>
        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, :as => :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form_container">
            <%= f.input :password, :label => "New password", :required => true, label: false, input_html: { class: 'password' }, placeholder: 'New Password' %>

            <%= f.input :password_confirmation, :label => "Confirm your new password", label: false, input_html: { class: 'password' }, placeholder: 'Confirm your new password', :required => true %>

            <%= f.button :submit, "Change my password", :class => "login_btn change_password ease" %>
        <% end %>
    <%= render "devise/shared/links" %>
    </div><!-- form_container -->
  </div><!-- signin_container -->
</div><!-- container -->